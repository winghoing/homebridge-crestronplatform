{
    "pluginAlias": "homebridge-crestronplatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "name",
                "type": "string",
                "default": "homebridge",
                "required": true
            },
            "host": {
                "title": "host",
                "type": "string",
                "placeholder": "192.168.1.100",
                "required": true,
                "description": "Crestron processor IP"
            },
            "lightbulbs": {
                "title": "lightbulbs",
                "type": "array",
                "items": {
                    "title": "Lightbulbs Config",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "id",
                            "type": "number",
			    "default": 1,
			    "minimum": 1,
			    "required": true
                        },
                        "type": {
                            "title": "type",
                            "type": "string",
                            "oneOf": [
			    	{ "title": "Non Dimmable", "enum": ["NonDimmable"] },
				{ "title": "Dimmable", "enum": ["Dimmable"] }
			    ],
		   	    "required": true
                        }
                    }
                }
            }
        }
    }
}

{
    "pluginAlias": "homebridge-crestronplatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "name",
                "type": "string",
                "default": "homebridge",
                "required": true
            },
            "host": {
                "title": "host",
                "type": "string",
                "placeholder": "192.168.1.100",
                "required": true,
                "description": "Crestron processor IP"
            },
            "accessories": {
                "title": "Accessories Config",
                "type": "array",
                "items": {
                    "NonDimLightbulbs": {
                        "title": "Non Dim Lightbulbs",
                        "type": "object",
                        "properties": {
                            "id": {
                                "title": "id",
                                "type": "number",
                                "default": 1,
                                "minimum": 1,
                                "required": true
                            }
                        }
                    },
                    "DimLightbulbs": {
                        "title": "Dim Lightbulbs",
                        "type": "object",
                        "properties": {
                            "id": {
                                "title": "id",
                                "type": "number",
                                "default": 1,
                                "minimum": 1,
                                "required": true
                            }
                        }
                    }
                }
            }
        }
    }

{
    "pluginAlias": "homebridge-crestronplatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "homebridge",
                "placeholder": "homebridge",
                "required": true
            },
            "host": {
                "title": "Host",
                "type": "string",
                "default": "192.168.1.100",
                "placeholder": "192.168.1.100",
                "required": true,
                "description": "Crestron processor IP"
            },
            "port": {
                "title": "Port",
                "type": "string",
                "default": "50001",
                "placeholder": "50001",
                "required": true,
                "description": "Crestron processor control port"
            },
            "non-dimmable-lightbulbs": {
                "title": "Non Dimmable Lightbulbs",
                "type": "array",
                "items": {
                    "title": "Non Dimmable Lightbulb Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "NonDimLIGHT",
                            "required": true
                        }
                    }
                }
            },
            "dimmable-lightbulbs": {
                "title": "Dimmable Lightbulbs",
                "type": "array",
                "items": {
                    "title": "Dimmable Lightbulb Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "DimLIGHT",
                            "required": true
                        }
                    }
                }
            },
            "window-coverings":{
                "title": "Window Covering",
                "type": "array",
                "items": {
                    "title": "Window Covering Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true     
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "Shade1",
                            "required": true
                        }
                    }
                }
            },
            "heatercoolers": {
                "title": "HeaterCooler",
                "type": "array",
                "items": {
                    "title": "Air conditioner Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "HeaterCooler",
                            "required": true
                        },
                        "minTemperatureValue": {
                            "title": "Minimum Temperature Value",
                            "type": "number",
                            "default": 16,
                            "required": true,
                            "description": "HeaterCooler SetTemperature MinValue,Default:16"
                        },
                        "maxTemperatureValue": {
                            "title": "Maximum Temperature Value",
                            "type": "number",
                            "default": 32,
                            "required": true,
                            "description": "HeaterCooler SetTemperature MaxValue,Default:32"
                        },
                        "minTemperatureStep": {
                            "title": "Minimum Temperature Step",
                            "type": "number",
                            "default": 1,
                            "required": true,
                            "description": "HeaterCooler Temperature minStep"
                        },
                        "modeSelection" : {
                            "title": "Mode Selection",
                            "type": "number",
                            "default": 2,
                            "required": true,
                            "oneOf": [
                                { "title": "Auto Mode Only", "enum": [0] },
                                { "title": "Heat Mode Only", "enum": [1] },
                                { "title": "Cool Mode Only", "enum": [2] },
                                { "title": "Auto Mode + Cool Mode", "enum": [3] },
                                { "title": "Auto Mode + Heat Mode", "enum": [4] },
                                { "title": "Cool Mode + Heat Mode", "enum": [5] },
                                { "title": "Auto Mode + Heat Mode + Cool Mode", "enum": [6] },
                            ],
                            "description": "HeaterCooler Mode Selection"
                        }
                        "temperatureDisplayUnit": {
                            "title": "Temperature Display Unit",
                            "type": "number",
                            "default": 0,
                            "required": true,
                            "oneOf": [
                                { "title": "Celsius", "enum": [0] },
                                { "title": "Fahrenheit", "enum": [1] }
                            ],
                            "description": "HeaterCooler Temperature Display 1:Fahrenheit, 0:Celsius,Default:0"
                        }
                    }
                }
            },
            "televisions": {
                "title": "Television",
                "type": "array",
                "items": {
                    "title": "Television Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "TV1",
                            "required": true
                        },
                        "inputs": {
                            "title": "Inputs",
                            "type": "array",
                            "items": {
                                "title": "Input Names",
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "title": "Name",
                                        "type": "string",
                                        "default": "HDMI1",
                                        "required": true
                                    },
                                    "type": {
                                        "title": "Type",
                                        "type": "number",
                                        "default": 3,
                                        "required": true,
                                        "oneOf": [
                                          { "title": "Other", "enum": [0] },
                                          { "title": "Home Screen", "enum": [1] },
                                          { "title": "Tuner", "enum": [2] },
                                          { "title": "HDMI", "enum": [3] },
                                          { "title": "Composite Video", "enum": [4] },
                                          { "title": "S-Video", "enum": [5] },
                                          { "title": "Component Video", "enum": [6] },
                                          { "title": "DVI", "enum": [7] },
                                          { "title": "Airplay", "enum": [8] },
                                          { "title": "USB", "enum": [9] },
                                          { "title": "Application", "enum": [10] }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "switches":{
                "title": "Switch",
                "type": "array",
                "items": {
                    "title": "Switch Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true     
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "Switch1",
                            "required": true
                        }
                    }
                }
            }
        }
    }
}

{
    "pluginAlias": "homebridge-crestronplatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "homebridge",
                "placeholder": "homebridge",
                "required": true
            },
            "host": {
                "title": "Host",
                "type": "string",
                "default": "192.168.1.100",
                "placeholder": "192.168.1.100",
                "required": true,
                "description": "Crestron processor IP"
            },
            "port": {
                "title": "Port",
                "type": "string",
                "default": "50001",
                "placeholder": "50001",
                "required": true,
                "description": "Crestron processor control port"
            },
            "non-dimmable-lightbulbs": {
                "title": "Non Dimmable Lightbulbs",
                "type": "array",
                "items": {
                    "title": "Non Dimmable Lightbulb Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "NonDimLIGHT",
                            "required": true
                        }
                    }
                }
            },
            "dimmable-lightbulbs": {
                "title": "Dimmable Lightbulbs",
                "type": "array",
                "items": {
                    "title": "Dimmable Lightbulb Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "DimLIGHT",
                            "required": true
                        }
                    }
                }
            },
            "heatercoolers": {
                "title": "HeaterCooler",
                "type": "array",
                "items": {
                    "title": "Air conditioner Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "HeaterCooler",
                            "required": true
                        },
                        "minTemperatureValue": {
                            "title": "minTemperatureValue",
                            "type": "number",
                            "default": 16,
                            "required": false,
                            "description": "HeaterCooler SetTemperature MinValue,Default:16"
                        },
                        "maxTemperatureValue": {
                            "title": "maxTemperatureValue",
                            "type": "number",
                            "default": 32,
                            "required": false,
                            "description": "HeaterCooler SetTemperature MaxValue,Default:32"
                        },
                        "minTemperatureStep": {
                            "title": "minTemperatureStep",
                            "type": "number",
                            "default": 1,
                            "required": false,
                            "description": "HeaterCooler Temperature minStep"
                        },
                        "temperatureDisplayUnits": {
                            "title": "temperatureDisplayUnits",
                            "type": "integer",
                            "default": 0,
                            "required": false,
                            "minimum": 0,
                            "maximum": 1,
                            "description": "HeaterCooler Temperature Display 1:Fahrenheit, 0:Celsius,Default:0"
                        }
                    }
                }
            },
            "televisions": {
                "title": "Television",
                "type": "array",
                "items": {
                    "title": "Television Configuration",
                    "type": "object",
                    "properties": {
                        "id": {
                            "title": "ID",
                            "type": "number",
                            "default": 1,
                            "minimum": 1,
                            "required": true
                        },
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "default": "TV",
                            "required": true
                        },
                        "input": {
                            "title": "Inputs",
                            "type": "array",
                            "items": {
                                "title": "Input Names",
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "title": "Name",
                                        "type": "string",
                                        "default": "HDMI1",
                                        "required": true
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

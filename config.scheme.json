{
	"pluginAlias": "homebridge-crestronplatform",
	"pluginType": "platform",
	"singular": true,
	"schema": {
		"type": "object",
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"required": true,
				"default": "Example Dynamic Platform"
			},
			"host": {
				"title": "host",
				"type": "string",
				"placeholder": "192.168.1.100",
				"required": true,
				"description": "Crestron professor IP must added"
			},
			"port": {
				"title": "port",
				"type": "string",
				"default": "50001",
				"required": true,
				"description": "the Marco Port"
			}
		}
	}
}
